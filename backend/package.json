{
  "name": "easy-shop-demo-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsup src/main.ts --minify",
    "dev": "concurrently --kill-others --names \"APPLICATION,BUILD-TASK\" -c \"bgBlue.bold,bgYellow.bold\" \"nodemon dist/main.js\" \"tsup src/main.ts --watch\"",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(ts|json)\"",
    "lint": "eslint --ignore-path .gitignore --ext .ts",
    "start": "node dist/main.js",
    "test": "jest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "json-graphql-server": "^2.3.2",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "type": "commonjs"
}
